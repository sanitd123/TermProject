@{
    int? accountID = HttpContextAccessor.HttpContext.Session.GetInt32("AccountID");
    string? accountType = HttpContextAccessor.HttpContext.Session.GetString("AccountType");
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RestaurantReviewCoreMVC</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/RestaurantReviewCoreMVC.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" />
    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand d-flex align-items-center" asp-controller="Restaurant" asp-action="SearchRestaurant">
                    <img class="d-inline-block align-text-top me-2" src="~/images/home.jpg" alt="Logo" height="40px" />
                    <span class="fw-bold">Restaurant Reviews</span>
                </a>

                <div class="d-flex ms-auto">
                    @if (accountID.HasValue)
                    {
                        if (accountType.Equals("Representative"))
                        {
                            <a class="btn btn-outline-primary me-2" asp-controller="Restaurant" asp-action="ManageRestaurants">Manage Restaurant</a>
                        }
                        else
                        {
                            <a class="btn btn-outline-primary me-2" asp-controller="Restaurant" asp-action="ManageReviews">Manage Reviews</a>
                        }
                        <form method="post" asp-controller="Account" asp-action="Logout">
                            <button type="submit" class="btn btn-danger">Log Out</button>
                        </form>
                    }
                    else
                    {
                        <a class="btn btn-outline-secondary me-2" asp-controller="Account" asp-action="Login">Log In</a>
                        <a class="btn btn-primary" asp-controller="Account" asp-action="CreateAccount">Sign Up</a>
                    }
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - RestaurantReviewCoreMVC - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
