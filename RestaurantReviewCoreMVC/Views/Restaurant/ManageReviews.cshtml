@model List<RestaurantReviewCoreMVC.Models.Review>

<h2 class="mb-4">Your Reviews</h2>

@if (Model != null && Model.Count > 0)
{
    <div class="row row-cols-1 row-cols-md-2 g-4">
        @foreach (Review review in Model)
        {
            <div class="col">
                <div class="card h-100 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">@review.RestaurantName</h5>
                        <h6 class="card-subtitle mb-2 text-muted">
                            Visited on: @review.VisitTime.ToString("MMMM dd, yyyy hh:mm tt")
                        </h6>
                        <p class="card-text">@review.Comment</p>

                        <ul class="list-group list-group-flush mt-3">
                            <li class="list-group-item">
                                <strong>Quality:</strong> @review.Quality
                            </li>
                            <li class="list-group-item">
                                <strong>Service:</strong> @review.Service
                            </li>
                            <li class="list-group-item">
                                <strong>Atmosphere:</strong> @review.Atmosphere
                            </li>
                            <li class="list-group-item">
                                <strong>Price:</strong> @review.Price
                            </li>
                        </ul>

                        <div class="d-flex justify-content-end gap-2">
                            <a class="btn btn-outline-primary" asp-controller="Restaurant" asp-action="ViewRestaurant" asp-route-id="@review.RestaurantID">View Restaurant</a>
                            <form asp-action="Review" asp-controller="Restaurant" method="get">
                                <input type="hidden" name="reviewID" value="@review.ReviewID" />
                                <button type="submit" class="btn btn-sm btn-primary">Update</button>
                            </form>
                            <form asp-action="DeleteReview" asp-controller="Restaurant" onsubmit="return confirm('Are you sure you want to delete this review?');" method="post">
                                <input type="hidden" name="reviewID" value="@review.ReviewID" />
                                <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                            </form>

                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="alert alert-info" role="alert">
        You haven't written any reviews yet.
    </div>
}



