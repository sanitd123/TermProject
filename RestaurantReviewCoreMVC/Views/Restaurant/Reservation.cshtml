@{
}
@model RestaurantReviewCoreMVC.Models.Reservation
<form method="post">
    <div>
        <label>Name</label><br />
        <input asp-for="Name" type="text" />
    </div>
    <div>
        <label>Phone</label><br />
        <input asp-for="Phone" type="tel" pattern="\(\d{3}\)\s\d{3}[-]\d{4}" />
    </div>
    <div>
        <label>Email</label>
        <input asp-for="Email" type="email" />
    </div>
    <div>
        <label>Reservation Time</label>
        <input asp-for="ReservationTime" type="datetime-local" />
    </div>
    <div>
        <label>Party Size</label>
        <select asp-for="PartySize">
            @for (int i = 1; i < 13; i++)
            {
                <option value="@i">@i</option>
            }
        </select>
    </div>
    <div>
        <label>Comment</label>
        <input asp-for="Comment" type="text" />
    </div>
    <button type="submit">Submit</button>
</form>